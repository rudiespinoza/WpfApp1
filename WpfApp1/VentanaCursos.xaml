<Window x:Class="WpfApp1.VentanaCursos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Formulario Centrado" Height="250" Width="350" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#F9F9F9">

    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Nombre:" FontSize="14" FontWeight="Bold" Foreground="#333"
                   Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtNombre" Grid.Row="0" Margin="70,5,0,5" Width="180" Height="25"
                 FontSize="14" BorderBrush="#BDBDBD" BorderThickness="1" Padding="5"/>

        <TextBlock Text="Apellido:" FontSize="14" FontWeight="Bold" Foreground="#333"
                   Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox x:Name="txtApellido" Grid.Row="1" Margin="70,5,0,5" Width="180" Height="25"
                 FontSize="14" BorderBrush="#BDBDBD" BorderThickness="1" Padding="5"/>

        <Button Content="Agregar" Grid.Row="2" Margin="0,10,0,10" Width="180" Height="35"
                Background="Yellow" Foreground="Black" FontSize="14" FontWeight="Bold"
                BorderThickness="0" Cursor="Hand" Click="Agregar_Click"
                HorizontalAlignment="Center"/>

        
    </Grid>
</Window>
