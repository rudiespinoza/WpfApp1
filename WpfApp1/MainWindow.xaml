<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <Button Content="Listar" Background="Red" Height="50" Width="200" Click="Button_Listar_Click"/>

            <ListBox x:Name="lbProfesores" Width="250" Height="100" FontSize="16"
                     DisplayMemberPath="NombreCompleto"/>

            <TextBox x:Name="txtNombre" Width="200" Height="30" Text="Ingrese nombre"/>
            <TextBox x:Name="txtApellido" Width="200" Height="30" Text="Ingrese apellido"/>

            <Button Content="Agregar" Background="Yellow" Height="50" Width="200" Click="Button_Agregar_Click"/>

        </StackPanel>
    </Grid>
</Window>
